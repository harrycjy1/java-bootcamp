<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<!-- HBox컨테이너 설정 시작 태그 -->

<HBox prefHeight="250.0" prefWidth="350.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
	<!-- Ctrl+Space를 누르면 intelligence(지능) 기능이 나온다. -->
	
	<padding> <!-- 안쪽 여백 설정 -->
		<!-- <Insets bottom = "10" left = "10" right = "10" top="10"/> -->
	<Insets topRightBottomLeft="10" />
	</padding>
	
	<!-- 컨트롤간의 간격 설정 -->
	<spacing>10</spacing>
	
	<!-- 내용(컨트롤)추가 -->
	<children>
			
			<TextField>
				<prefWidth>200</prefWidth>
			</TextField>
		
		<Button text="확인" />
		<!-- <Button>
			<text>확인</text>
		</Button> -->			
	</children>	
</HBox>
